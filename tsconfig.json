{
    "compilerOptions":{
        "lib":[
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs":true,
        "skipLibCheck":true,
        "strict":true,
        "noEmit":true,
        "incremental":true,
        "module":"esnext",
        "esModuleInterop":true,
        "moduleResolution":"node",
        "resolveJsonModule":true,
        "isolatedModules":true,
        "jsx":"preserve",
        "plugins":[
            {
                "name":"next"
            }
        ],
        "paths":{
            "@/*":[
                "./src/*"
            ]
        },
    },
    "include":[
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx"
, "src/ui/layout/page/index.js"    ],
    "exclude":[
        "node_modules"
    ],

}
