{
    "extends": [
        "stylelint-config-recommended-scss",
        "stylelint-prettier/recommended"
    ],
    "ignoreFiles": [
        "styles/colors.scss"
    ],
    "plugins": [
        "stylelint-prettier",
        "stylelint-order"
    ],
    "rules": {
        "color-named": "never",
        "color-no-hex": true,
        "declaration-no-important": true,
        "max-nesting-depth": [
            5,
            {
                "ignore": [
                    "blockless-at-rules",
                    "pseudo-classes"
                ]
            }
        ],
        "no-invalid-position-at-import-rule": null,
        "order/order": [
            "dollar-variables",
            "declarations",
            "custom-properties",
            "at-rules",
            "rules"
        ],
        "order/properties-alphabetical-order": [
            true,
            {
                "severity": "warning"
            }
        ],
        "prettier/prettier": [
            true,
            {
                "endOfLine": "auto"
            }
        ],
        "selector-max-id": 0,
        "scss/operator-no-unspaced": null,
        "scss/comment-no-empty": null
    }
}
